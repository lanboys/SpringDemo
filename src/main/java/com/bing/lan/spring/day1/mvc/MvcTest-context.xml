<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="employeeAction" class="com.bing.lan.spring.day1.mvc.EmployeeAction" >
        <property name="employeeService" ref="employeeService"/>
    </bean>

    <bean id="employeeService" class="com.bing.lan.spring.day1.mvc.EmployeeServiceImpl" >
        <property name="employeeDAO" ref="employeeDAO"/>
    </bean>

    <bean id="employeeDAO" class="com.bing.lan.spring.day1.mvc.EmployeeDAOImpl" >
    </bean>

</beans>